# BVI Park & Ride Shuttle - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=bvi_user
DB_PASSWORD=your_secure_database_password_here
DB_NAME=bvi_park_ride
DATABASE_URL=postgresql://bvi_user:your_password@localhost:5432/bvi_park_ride

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=1d

# =============================================================================
# MAPBOX
# =============================================================================
# Get your token from: https://account.mapbox.com/access-tokens/
MAPBOX_TOKEN=pk.your_mapbox_public_token_here

# =============================================================================
# FIREBASE CLOUD MESSAGING (for push notifications)
# =============================================================================
# Get from Firebase Console > Project Settings > Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key_here

# =============================================================================
# API CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
WS_URL=ws://localhost:3000
CORS_ORIGIN=*

# =============================================================================
# ADMIN DASHBOARD
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_public_token_here
